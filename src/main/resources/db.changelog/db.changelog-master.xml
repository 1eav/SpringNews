<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">

    <changeSet id="creteCategoryTable" author="postgres">
        <createTable tableName="categories">
            <column name="id" type="bigserial">
                <constraints primaryKey="true"/>
            </column>
            <column name="title" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="createNewsTable" author="postgres">
        <createTable tableName="news">
            <column name="id" type="bigserial">
                <constraints primaryKey="true"/>
            </column>

            <column name="title" type="varchar(255)">
                <constraints nullable="false"/>
            </column>

            <column name="text" type="text">
                <constraints nullable="false"/>
            </column>

            <column name="date" type="timestamp(6)">
                <constraints nullable="false"/>
            </column>

            <column name="category_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="addForeignKeyToNews" author="postgres">
        <addForeignKeyConstraint baseTableName="news"
                                 baseColumnNames="category_id"
                                 constraintName="fk_news_categories"
                                 referencedTableName="categories"
                                 referencedColumnNames="id"
                                 onDelete="CASCADE"/>
    </changeSet>

</databaseChangeLog>